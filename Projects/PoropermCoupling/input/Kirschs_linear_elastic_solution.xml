            <Var name="s_z" />
            <Var name="t_xy" />
            <Var name="t_xz" />
            <Var name="t_yz" />
            <Var name="p" />
            <Var name="k_x" />
            <Var name="k_y" />
            <Var name="k_z" />
            <Var name="phi" />
            <Var name="e_x" />
            <Var name="e_y" />
            <Var name="e_z" />
            <Var name="e_xy" />
            <Var name="e_xz" />
            <Var name="e_yz" />
            <Var name="ep_x" />
            <Var name="ep_y" />
            <Var name="ep_z" />
            <Var name="ep_xy" />
            <Var name="ep_xz" />
            <Var name="ep_yz" />
            <Var name="K_0" />
        </Scalars>
        <Vectors>
            <Var name="u" />
            <Var name="v" />
        </Vectors>
    </OutputControls>
    <Physics>
        <GravityConstant gravity="0.0" />
        <GravityDirection x_direction="0.0" y_direction="0.0" z_direction="-1.0" />
        <Prestress sxx= "0.0" syy= "0.0" szz= "0.0" sxy= "0.0" sxz= "0.0" syz= "0.0" />
    </Physics>
    <!-- Material Settings -->
    <ReservoirRegions>
        <RegionNumber n_regions="1" />
    </ReservoirRegions> 
    <RegionsDefinition>
        <!-- Region definition -->
        <RegionData mat_id="1" n_boundaries="7" n_parameters="8" >
            <Parameters eyoung="1.0e6" nu="0.3" phi="0.1" kappa="1.0e-13" alpha="1.0" m="1.0e19" rho="1000.0" mu="0.001" />
            <Boundaries>
                <Boundary bc_id="2"/>
                <Boundary bc_id="3"/>
                <Boundary bc_id="4"/>
                <Boundary bc_id="5"/>
                <Boundary bc_id="6"/>
                <Boundary bc_id="7"/>
                <Boundary bc_id="8"/>
            </Boundaries>
        </RegionData>          
    </RegionsDefinition>
    <BoundaryConditions>
        <BoundaryCondition bc_id="2" type="Nt_Dp" tx="0.0" ty="100.0" p="0.0" />
        <BoundaryCondition bc_id="3" type="Nt_Dp" tx="0.0" ty="-100.0" p="0.0" />
